{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "orderNumber": {
      "type": "string"
    },
    "orderStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "canceled",
        "refunded",
        "success"
      ]
    },
    "orderDate": {
      "type": "datetime"
    },
    "subtotal": {
      "type": "decimal"
    },
    "totalAmount": {
      "type": "decimal"
    },
    "order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "order"
    },
    "address": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::address.address",
      "inversedBy": "orders"
    },
    "payment": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::payment.payment",
      "mappedBy": "order"
    },
    "hashId": {
      "type": "string"
    },
    "comment": {
      "type": "string"
    }
  }
}
